{
  "manifest_version": 3,
  "name": "Ruh",
  "version": "0.1.1",
  "description": "AI-powered product safety analysis - detect harmful substances and find safer alternatives",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.ca/*",
    "http://localhost:8001/*",
    "https://ruh-api-948739110049.us-central1.run.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar.html", "sidebar.js", "assets/*", "icon-128.png", "icon-16.png", "icon-48.png", "ruh_icon_transparent.png"],
      "matches": ["https://*.amazon.com/*", "https://*.amazon.ca/*"]
    }
  ],
  "action": {
    "default_title": "Ruh - Product Safety"
  }
}
